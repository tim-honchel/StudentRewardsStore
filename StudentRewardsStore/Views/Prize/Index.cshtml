@model Prize

@*Displays prizes with links to edit or create new*@

<h2>@Model.PrizeName</h2>
<p>Modify the prize information, then click "Update."</p>
@using (Html.BeginForm("UpdatePrize", "Prize", "Post")) // posts email and password to admin controller, overview action
{
    <input asp-for="PrizeID" type="hidden" value="@Model.PrizeID" />
    <br>
    <label asp-for="PrizeName" class="control-label">Name</label>
    <input type="text" name="PrizeName" class="form-control" value="@Model.PrizeName" />
    <br>
    <label asp-for="Description" class="control-label">Description</label>
    <input type="text" name="Description" class="form-control" value="@Model.Description" />
    <br>
    <label asp-for="ImageLink" class="control-label">Image Link</label>
    <input type="text" name="ImageLink" class="form-control" value="@Model.ImageLink" />
    <br>
    <label asp-for="Price" class="control-label">Price</label>
    <input type="text" name="Price" class="form-control" value="@Model.Price" />
    <br>
    <label asp-for="DisplayStatus" class="control-label">Show or Hide in Store</label>
    <input type="text" name="DisplayStatus" class="form-control" value="@Model.DisplayStatus" />
    <br>
    <label asp-for="Inventory" class="control-label">Current Inventory Count</label>
    <input type="text" name="Inventory" class="form-control" value="@Model.Inventory" />
    <br>
    <label asp-for="ValueTowardsLimit" class="control-label">Cost Towards Weekly Limit</label>
    <input type="text" name="ValueTowardsLimit" class="form-control" value="@Model.ValueTowardsLimit" />
    <br>
    <input type="submit" value="Update" class="btn btn-primary" />
}

@{
        TempData["authenticateOrganizationID"] = ViewBag.Message; // saves store ID for future authentication
}