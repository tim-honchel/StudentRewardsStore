@{
    ViewData["Title"] = "Best Prize Store";
}
<div class="main-page">
    <div class="column-1">
        <h1 class="my-title">Best Prize Store!</h1>
        <p>An online store that rewards students for great attendance, behavior, and performance.</p>
        <img class="photo" src="\images\tablets.png" alt="students with prizes">
