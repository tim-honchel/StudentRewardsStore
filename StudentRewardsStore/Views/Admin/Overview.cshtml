@model IEnumerable<Organization>
<div class="secondary-page">
    <h2>Login Successful</h2>
    <p>Select your store:</p>
        @if (Authentication.MultipleUsers == true)
        {
            <p style = "color:darkred">This account is signed in on multiple devices or windows, which may cause unexpected effects.</p>
        }
    <table class="table">
        <tr>
            <th>Store Name</th>
        </tr>

        @foreach (var organization in Model) // displays each store that the admin owns, with a link to that store
        {
            <tr>
                <td><a href="/Organization/Index/@organization.OrganizationID">@organization.Name</a></td> 
            </tr>
        }


    </table>

    <a asp-area="" asp-controller="Organization" asp-action="CreateStore">Create a New Store</a>
</div>