@model Organization
<div class="secondary-page">
    <h2>Create a New Store</h2>

    @using (Html.BeginForm("SaveNewStore", "Organization", "Post")) // Posts new ID, store name, store URL, and currency name to Organization controller, SaveNewStore action
    {
        <br>
        <input asp-for="OrganizationID" type="hidden" value="" />
        <label asp-for="Name" class="control-label">Name of Store</label>
        <p><em>This is what students will see at the top of the web page.</em></p>
        <input type="text" name="Name" class="form-control" value="" />
        <br>
        <label asp-for="CurrencyName" class="control-label">Name of Store Currency (Plural)</label>
        <p><em>Prices will be in your own pseudo-currency.</em></p>
        <input type="text" name="CurrencyName" class="form-control" value="" />
        <br>
        <input asp-for="_AdminID" type="hidden" value="@Authentication.AdminID" />
        <input type="submit" value="Create Store" class="btn btn-primary" />
    }

</div>