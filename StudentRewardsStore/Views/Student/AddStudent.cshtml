@model Student

@*Inputs information to add a new student record*@

    <div class="secondary-page">
    <h2>Add a Student Account</h2>
    <p>Enter the information and click "Create".</p>
    @using (Html.BeginForm("SaveNewStudent", "Student", "Post")) // form that inputs and posts values to Student controller, SaveNewStudent action
    {
        <input asp-for="StudentID" type="hidden" value="" /> @*primary key is auto-generated, so it can be hidden, but needs to be included in post*@
        <br>
        <label asp-for="StudentName" class="control-label">Name</label>
        <input type="text" name="StudentName" class="form-control" value="" />
        <br>
        <label asp-for="PIN" class="control-label">PIN</label>
        <input type="text" name="PIN" class="form-control" value="" />
        <br>
        <label asp-for="Category" class="control-label">Category</label>
        <input type="text" name="Category" class="form-control" value="" />
        <br>
        <label asp-for="Balance" class="control-label">Balance</label>
        <input type="text" name="Balance" class="form-control" value="" />
        <br>
        <label asp-for="Status" class="control-label">Status</label>
        <select class="form-control" name="Status" value=""> @*dropdown list*@
            @foreach (var status in Model.StatusDropdown) @*populates the dropdown list*@
            {
       	        <option value="@status">@status</option>
            }
            </select>
        <br>
        <input asp-for="_OrganizationID" type="hidden" value="@Authentication.StoreID" /> @*foreign key will be set to the current organization ID, kept hidden*@
        <input type="submit" value="Add" class="btn btn-primary" /> @*submit button*@
    }
</div>


