@model Student

@*Displays editable student information*@

<div class="secondary-page">

    <h2>@Model.StudentName</h2>
    <p>Edit the student's' information, then click "Update."</p>
    @using (Html.BeginForm("UpdateStudent", "Student", "Post")) // inputs and posts updated values to Student controller, UpdateStudent action
    {
        <input asp-for="StudentID" type="hidden" value="@Model.StudentID" /> @*primary key is hidden, but included in post*@
        <br>
        <label asp-for="StudentName" class="control-label">Name</label>
        <input type="text" name="StudentName" class="form-control" value="@Model.StudentName" />
        <br>
        <label asp-for="PIN" class="control-label">PIN</label>
        <input type="text" name="PIN" class="form-control" value="@Model.PIN" />
        <br>
        <label asp-for="Category" class="control-label">Category</label>
        <input type="text" name="Category" class="form-control" value="@Model.Category" />
        <br>
        <label asp-for="Status" class="control-label">Status</label>
        <select class="form-control" name="Status" value="@Model.Status"> @*dropdown list*@
            <option value="@Model.Status">@Model.Status</option> @*the current value will be the default, at the top of the dropdown list*@
            @foreach (var status in Model.StatusDropdown) @*populates the dropdown list with values*@
            {
       	        <option value="@status">@status</option>
            }
            </select>
        <br>
        <input type="submit" value="Update" class="btn btn-primary" /> @*submit button*@

}
</div>